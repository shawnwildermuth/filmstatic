<div class="container">
  <h2>Thank You Supporters of the Film!</h2>
  <div class="text-gray-800">
    {% for key, collection in hwfilmSupporters %}
      <div class="border-0 border-b-2 border-gray-500 mb-4">
        <h3 class="text-center">{{ key }}</h3>
        <div class="text-center text-lg">
          {% if collection | length > 1 %}
          <div class="!grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 2xl:grid-cols-5">
            {% for supporter in collection | supporterSort %}
              <div>{{ supporter[0] }}</div>
            {% endfor %}
          </div>
          {% else %}
              <div class="text-center">{{ collection[0][0] }}</div>
          {% endif %}
        </div>
    
      </div>
    {% endfor %}
  </div>
</div>