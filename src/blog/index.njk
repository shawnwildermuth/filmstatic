---
layout: base.njk
---
<!-- Blog -->
<section class="blog pt-130 pb-100">
  <div class="container">
    <div class="row">
      <div class="ml-4 w-full mt-8 lg:mt-4">
      <div class="flex justify-between">
      <h1>Blog</h1>
      <div><a href="https://twainfilms.com/feed.xml"><i class="fas fa-rss"></i> Subscribe</a></div>
      </div>
      <hr />
      </div>
    </div>
    <div class="row">
      {% for blog in collections.blog | take(10) %}
        <div class="col-lg-4 col-md-6 mb-8">
          <div class="blog--block">
            <div class="blog--thumb">
              <a href="{{ blog.url }}"><img src="{{ blog.data.thumb_image if blog.data.thumb_image else site.fallbackBlogImage }}" alt="{{ blog.data.title }}"></a>
            </div>
            <div class="blog--content d-flex">
              <div class="blog--text">
                <h4>
                  <a href="{{ blog.url }}">{{ blog.data.title }}</a>
                </h4>
                <span class="fw-700 theme-color text-uppercase">{{ blog.data.author }} - {{ blog.data.publishedDate | formatDate }}</span>
                <p>{{blog.data.description}}</p>
                <a href="{{ blog.url}}" class="read--more">Read More</a>
              </div>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>
<!-- Blog End -->